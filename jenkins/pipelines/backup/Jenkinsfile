// Jenkinsfile - CI/CD pipeline pentru scriptul Python de backup

pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')
        IMAGE_NAME = 'toadermadalina/backup-image'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Clonăm repository-ul...'
                git branch: 'main', url: 'https://github.com/ToaderMadalina/platforma-monitorizare.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Construim imaginea Docker pentru backup...'
                sh 'docker build -t $IMAGE_NAME -f backup/Dockerfile .'
            }
        }

        stage('Docker Login') {
            steps {
                echo 'Autentificare în Docker Hub...'
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }

        stage('Push Docker Image') {
            steps {
                echo 'Împingem imaginea pe Docker Hub...'
                sh 'docker push $IMAGE_NAME'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Rulează containerul pentru verificare...'
                sh '''
                docker run --rm $IMAGE_NAME python3 /usr/local/bin/backup.py || echo "Verificare: backup script rulează corect."
                '''
            }
        }
    }

    post {
        success {
            echo 'Pipeline finalizat cu succes!'
        }
        failure {
            echo 'Pipeline eșuat!'
        }
    }
}

